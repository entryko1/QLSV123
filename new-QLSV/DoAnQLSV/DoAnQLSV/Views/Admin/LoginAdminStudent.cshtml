
@using DoAnQLSV.Models;
@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <title>AdminStudent</title>
    <!-- Custom Theme files -->
    <link href="~/Content/styleAdminStudent.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Square login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, Sony Ericsson, Motorola web design" />
    <!--Google Fonts-->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <!--Google Fonts-->
</head>
<body>
    <!--header start here-->
    <div class="login-form">
        <div class="top-login">
            <span><img src="~/Content/images/group.png" alt="" /></span>
        </div>
        <h1>Admin-Student</h1>
        <h4 style="color: red" align="center"><strong>@ViewBag.Thongbao</strong></h4>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="login-top">
           
                @ViewData["Loi1"]
                <div class="login-ic">
                    <i></i>
                    <input type="text"  placeholder="Nhập tên đăng nhập" name="Username"/>
                    <div class="clear"> </div>
                </div>
                @ViewData["Loi2"]
                <div class="login-ic">
                    <i class="icon"></i>
                    <input type="password" placeholder="Nhập mật khẩu" name="Password"/>
                    <div class="clear"> </div>
                </div>

                <div class="log-bwn">
                    <input type="submit" value="Đăng nhập">
                </div>
            
        </div>
    }
       
        <p class="copy">© 2018 Đại học IT | Design by  <a href="http://fb.com/" target="_blank">Trọng Hiếu & Quốc Hào</a></p>
    </div>
    <!--header start here-->
</body>
</html>