@model IEnumerable<DoAnQLSV.Models.DIEM>

@{
    ViewBag.Title = "Xemdiem";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<head>
    <title>Bảng điểm</title>
    <style>
        table, th, td {
            border: 2px solid #E98303;
        }
    </style>
</head>



<h2 align="center" style="font-family: cursive ; color: darkorange">BẢNG ĐIỂM</h2>


<body>
<div class="banner-box">
    <div class="wrap">
        <div class="main-top">
            <div class="main">
                <table style="width:100%" class="table">
                    <tr>
                        <th style="background-color: #E98303; color: aliceblue">
                            Tên Môn Học
                        </th>
                        <th style="background-color: #E98303; color: aliceblue">
                            Học Kỳ
                        </th>
                        <th style="background-color: #E98303; color: aliceblue">
                            Điểm thi L1
                        </th>
                        <th style="background-color: #E98303; color: aliceblue">
                            Điểm thi L2
                        </th>
                        <th style="background-color: #E98303; color: aliceblue">
                            Điểm trung bình
                        </th>
                        
                    </tr>

                    @foreach (var item in Model) {
                        <tr>
                            
                            <td style="text-align: center">
                                @Html.DisplayFor(modelItem => item.MONHOC.TenMH)
                            </td>
                            <td style="text-align: center">
                                @Html.DisplayFor(modelItem => item.HocKy)
                            </td>
                            <td style="text-align: center">
                                @Html.DisplayFor(modelItem => item.DiemLan1)
                            </td>
                            <td style="text-align: center">
                                @Html.DisplayFor(modelItem => item.DiemLan2)
                            </td>
                            <td style="text-align: center">
                                @Html.DisplayFor(modelItem => item.DiemTB)
                            </td>
                          
                        </tr>

                    }
                    <td colspan="5" style="background-color: darkgray; text-align: center">@Html.ActionLink("In Bảng Điểm", "Scan")</td>
                </table>
               
               
                
            </div>
        </div>
    </div>
       
</div>
   
</body>
