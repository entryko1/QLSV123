                        <p align="left">  Điểm trung bình</p>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.DiemTB, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiemTB, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Nhập điểm" class="btn btn-primary" style="margin-left: 20px" />
                        </div>
                    </div>
                </div>
            }

            <div class="clearfix"> </div>
            <div class="row">


                <div class="row calender widget-shadow">
                    <h4 class="title">Lịch</h4>
                    <div class="cal1">

                    </div>
                </div>
