@model DoAnQLSV.Models.BAIVIET

@{
    ViewBag.Title = "PostNews";
    Layout = "~/Views/Shared/_LayoutAdminITU.cshtml";
}

<h2>PostNews</h2>

@using (Html.BeginForm("PostNews", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="color:red">Đăng tin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
             <p style="font-weight:bold" align="left">Danh mục tin tức</p>
            <div class="col-md-10">
                @Html.DropDownList("Id")
            </div>
        </div>

        <div class="form-group">
            <p style="font-weight:bold" align="left">Tiêu đề</p>
            <div class="col-md-10">
              
                @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p style="font-weight:bold" align="left">Hình ảnh</p> 
            <div class="col-md-10">
                <input type="file" name="fileupload" />
                <p style="color:red">@ViewBag.ThongBaoIma</p>
            </div>
        </div>

        <div class="form-group">
            <p style="font-weight:bold" align="left">Tóm tắt</p>
            <div class="col-md-10">
              @Html.TextAreaFor(model => model.TomTat)

                
            </div>
        </div>

        <div class="form-group">
            <p style="font-weight:bold" align="left">Ngày đăng tin</p> 
            <div class="col-md-10">
                <input type="date" name="NgayViet"/>             
                @Html.ValidationMessageFor(model => model.NgayViet)
            </div>
        </div>

        <div class="form-group">
            <p style="font-weight:bold" align="left">Nội dung</p> 
            <div class="col-md-10">
               @Html.TextAreaFor(model => model.ChiTiet, new { @Id ="ChiTiet" })
                <script>
                         CKEDITOR.replace("ChiTiet");
                </script>
            </div>
        </div>

        <div class="form-group">
            <p style="font-weight:bold" align="left">Nguồn</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nguon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nguon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng bài" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
