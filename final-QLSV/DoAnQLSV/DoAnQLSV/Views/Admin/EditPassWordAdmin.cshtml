@model DoAnQLSV.Models.ADMIN

@{
    ViewBag.Title = "EditPassWordAdmin";
    Layout = "~/Views/Shared/_LayoutAdminStudent.cshtml";
}

<h2>Đổi Mật Khẩu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <p style="color:red">@ViewBag.Erorr1</p>
        <p style="color:red">@ViewBag.Error</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Username)
        @Html.HiddenFor(model => model.Role)

        <div class="form-group">
            <label class="control-label col-md-2">Nhập lại mật khẩu cũ</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="OldPassword" name="OldPassword" type="password" placeholder="Nhập mật khẩu cũ" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Password</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Password" name="Password" type="password" placeholder="Nhập mật khẩu mới" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Nhập lại mật khẩu</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="RePassword" name="RePassword" type="password" placeholder="Nhập lại mật khẩu mới" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


