@model DoAnQLSV.Models.BAIVIET

@{
    ViewBag.Title = "EditNews";
    Layout = "~/Views/Shared/_LayoutAdminITU.cshtml";
}

<h2 style="color:red">EditNews</h2>

@using (Html.BeginForm("EditNews", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Chỉnh sửa bài viết</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdBV)

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
          Tiêu đề
            <div class="col-md-10">
                @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
            </div>
        </div>    
        <div class="form-group">
           Hình ảnh
            <div class="col-md-10">
                <input type="file" name="fileupload" />   
           
            </div>
            
        </div>

        <div class="form-group">
            Tóm tắt
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TomTat)
            </div>
        </div>

        <div class="form-group">
           Ngày đăng tin
            <div class="col-md-10">
                <input type="date" name="NgayViet" />        
            </div>
        </div>

        <div class="form-group">
           Nội dung
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ChiTiet, new { @Id = "ChiTiet" })
                <script>
                         CKEDITOR.replace("ChiTiet");
                </script>
            </div>
        </div>

        <div class="form-group">
           Nguồn
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nguon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nguon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "ViewNews")
</div>
