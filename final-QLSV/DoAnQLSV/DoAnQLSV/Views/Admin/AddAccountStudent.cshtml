@model DoAnQLSV.Models.TAIKHOAN

@{
    ViewBag.Title = "AddAccountStudent";
    Layout = "~/Views/Shared/_LayoutAdminITU.cshtml";
}

<h2 style="color:red">Tạo tài khoản Sinh Viên</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p align="left" style="font-weight:bold">Mã số sinh viên</p>
            <div class="col-md-5">
                @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <p align="left" style="font-weight:bold">Mật khẩu</p>
            <div class="col-md-5">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <p align="left" style="font-weight:bold" >Nhập lại mật khẩu </p><span style="color:red">@ViewBag.Mk</span>
            <div class="col-md-5">
             <input class="form-control text-box single-line" id="NLMK" name="NLMK" type="text"/>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo tài khoản" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


