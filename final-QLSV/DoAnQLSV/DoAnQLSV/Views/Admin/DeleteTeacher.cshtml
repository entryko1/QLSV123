@model DoAnQLSV.Models.ADMIN
@{
    ViewBag.Title = "DeleteTeacher";
    Layout = "~/Views/Shared/_LayoutAdminITU.cshtml";
}

<h2>Xóa Tài Khoản Giáo Viên</h2>

<h3 style="color:red">Bạn muốn xóa tài khoản này ?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Hiển Thị:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Tên Đăng Nhập:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            Mật Khẩu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay về", "ViewAccountAdmin")
        </div>
    }
</div>

